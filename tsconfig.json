{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es6",                                  // Use ECMAScript 6 for output
    "lib": ["dom", "dom.iterable", "esnext"],          // Libraries needed for a React project
    "jsx": "react-jsx",                                // Use the new JSX transform introduced in React 17
    "module": "esnext",                                // Module system to use
    "moduleResolution": "node",                        // Module resolution strategy

    /* Interop Constraints */
    "esModuleInterop": true,                           // Emit additional JS to ease CommonJS interoperability
    "allowSyntheticDefaultImports": true,              // Allow default imports from modules with no default export

    /* Type Checking */
    "strict": true,                                    // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true,          // Disallow inconsistently-cased references to the same file

    /* Modules */
    "resolveJsonModule": true,                         // Enable importing .json files

    /* Output Control */
    "noEmit": true,                                    // Disable emitting files from a compilation

    /* Completeness */
    "skipLibCheck": true                               // Skip type checking all .d.ts files
  },
  "include": ["src"],                                  // Include all files in the src folder
  "exclude": ["node_modules"]                          // Exclude node_modules from the compilation
}
